<h1>{{title}} </h1>

<div class="row">

{{#each posts as |blog-post|}}
	<div class="media archive">
	  <div class="media-left">
	    <a href="#">
      	<img class="media-object archive-thumbnail" src={{blog-post.image}} alt={{blog-post.alt}}/>
	    </a>
	  </div>
	  <div class="media-body">
	    <h4 class="media-heading">{{blog-post.title}} <small>{{blog-post.date}}</small></h4>
	    <p>{{blog-post.body}}</p>
	  </div>
	</div>
{{/each}}


</div>